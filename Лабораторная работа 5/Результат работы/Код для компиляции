  \begin{columns}
    \begin{column}{0.5\textwidth}
    \vspace{-0.5cm}
      \begin{itemize}
        \item 1949—1954: С. И. Ефремов
        \item 1954—1978: Г. М. Михалёв
        \item 1978—1988: Н. С. Антонов
        \item 1989—1992: С. А. Пискунов
        \item 1992—2013: Ф. С. Авдеев
        \item 1994—2013: В. А. Голенков
        \item 2014—2015: (и. о.) В. Ф. Ницевич
        \item 2015—2017: (и. о.) О. В. Пилипенко
        \item 2017—2019: О. В. Пилипенко
        \item 2019—2021: (и. о.) А. А. Федотов
        \item 2021—2024: А. А. Федотов
        \item 2025: (и.о) Г. М. Зомитева
      \end{itemize}
    \end{column}
    \begin{column}{0.5\textwidth}
        \centering  % Центрируем содержимое колонки
